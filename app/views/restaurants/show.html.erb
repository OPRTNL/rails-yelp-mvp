<h1>

<%= @restaurant.name %>

</h1>
<p>
  <%= @restaurant.address %>
</p>
<p>
<%= @restaurant.category %>
</p>
<p>
  <%= link_to 'Back to restaurants', restaurants_path %>
</p>

